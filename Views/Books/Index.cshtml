                        </svg>
                    </span>
                    <!--end::Svg Icon-->
                </div>
            </div>
            Books
        </h3>
        <div class="card-toolbar">
            <a asp-action="Create" class="btn btn-sm btn-primary">
                <i class="bi bi-plus-square-dotted"></i>
                Create
            </a>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.Any())
        {
            <div class="alert alert-dismissible bg-light-warning border border-warning border-dashed d-flex flex-column flex-sm-row w-100 p-5 mb-10">
                <!--begin::Icon-->
                <!--begin::Svg Icon | path: icons/duotune/communication/com003.svg-->
                <span class="svg-icon svg-icon-2hx svg-icon-warning me-4 mb-5 mb-sm-0">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect opacity="0.3" x="2" y="2" width="20" height="20" rx="10" fill="currentColor" />
                        <rect x="11" y="14" width="7" height="2" rx="1" transform="rotate(-90 11 14)" fill="currentColor" />
                        <rect x="11" y="17" width="2" height="2" rx="1" transform="rotate(-90 11 17)" fill="currentColor" />
                    </svg>
                </span>
                <!--end::Svg Icon-->
                <!--end::Icon-->
                <!--begin::Content-->
                <div class="d-flex flex-column pe-0 pe-sm-10 align-self-center">
                    <h5 class="mb-1">No books found!</h5>
                </div>
                <!--end::Content-->
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-row-dashed table-row-gray-300 gy-7">
                    <thead>
                        <tr class="fw-bold fs-6 text-gray-800">
                            <th>Book</th>
                            <th>Publisher</th>
                            <th>Publishing Date</th>
                            <th>Hall</th>
                            <th>Rental</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in Model)
                        {
                            <tr>
                                <td>
                                    <div class="symbol symbol-50px overflow-hidden me-3">
                                        <div class="symbol-label h-70px">
                                            <img src=@(string.IsNullOrEmpty(book.ImageUrl) ? "/Images/Books/no-book.jpeg" :$"/Images/Books/{book.ImageUrl}") alt="cover" class="w-100">
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="text-primary fw-bolder mb-1">@book.Title</span>
                                        <span>@book.Author</span>
                                    </div>
                                </td>
                                <td>@book.Publisher</td>
                                <td>@book.PublishingDate.ToString("dd MMM, yyyy")</td>
                                <td>@book.Hall</td>
                               <td>
                                    <span class="badge badge-light-@(book.IsAvailableForRental ? "success" : "warning")">
                                        @(book.IsAvailableForRental ? "Avilable for rental" : "Not Available for rental")
                                    </span>
                                </td>
                                <td>
                                    <span class="badge badge-light-@(book.IsDeleted ? "danger" : "success") js-status">
                                        @(book.IsDeleted ? "Deleted " : "Available")
                                    </span>
                                </td>
                                <td>
                                    <button type="button" class="btn btn-sm btn-icon btn-color-primary btn-active-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                        <!--begin::Svg Icon | path: icons/duotune/general/gen024.svg-->
                                        <span class="svg-icon svg-icon-2">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                    <rect x="5" y="5" width="5" height="5" rx="1" fill="currentColor"></rect>
                                                    <rect x="14" y="5" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                    <rect x="5" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                    <rect x="14" y="14" width="5" height="5" rx="1" fill="currentColor" opacity="0.3"></rect>
                                                </g>
                                            </svg>
                                        </span>
                                        <!--end::Svg Icon-->
                                    </button>
                                    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-3" data-kt-menu="true" style="">
                                        <!--begin::Menu item-->
                                        <div class="menu-item px-3">
                                            <a asp-action="Edit" asp-route-Id="@book.Id" class="menu-link px-3 js-render-modal">
                                                Edit
                                            </a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a asp-action="Details" asp-route-Id="@book.Id" class="menu-link px-3 js-render-modal">
                                                Details
                                            </a>
                                        </div>
                                        <!--end::Menu item-->
                                        <!--begin::Menu item-->
                                        <div class="menu-item px-3">
                                            <a href="javascript:;" class="menu-link flex-stack px-3 js-toggle-status" data-id="@book.Id">
                                                Toggle Status
                                            </a>

                                        </div>
                                        <!--end::Menu item-->
                                    </div>
                                </td> 
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Plugins {
    <script src="~/assets/plugins/datatables/datatables.bundle.js"></script>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('table').DataTable();

            $('.js-toggle-status').on('click', function () {
                var btn = $(this);

                bootbox.confirm({
                    message: "are you sure you want to toggle this item?",
                    buttons: {
                        confirm: {
                            label: 'Yes',
                            className: 'btn-danger'
                        },
                        cancel: {
                            label: 'No',
                            className: 'btn-secondary'
                        }
                    },
                    callback: function (result) {
                        if (result) {
                            $.post({
                                url: '/Books/ToggleStatus/' + btn.data('id'),
                                success: function () {
                                    var row = btn.parents('tr');
                                    var status = row.find('.js-status');
                                    var newStatus = status.text().trim() === 'Deleted' ? 'Available' : 'Deleted';
                                    status.text(newStatus).toggleClass('badge-light-success badge-light-danger');
                                    row.addClass('animate__animated animate__flash');

                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success',
                                        text: 'Saved Successfully'
                                    });
                                },
                                error: function () {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Oops...',
                                        text: 'Something went wrong'
                                    });
                                }
                            });
                        }
                    }
                });
            });
        });
    </script>

}