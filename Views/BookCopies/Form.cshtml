@model BookCopyFormViewModel
@{
    ViewData["Title"] = $"{(Model?.Id > 0 ? "Edit" : "Add")} Copy";
}
<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">@(Model?.Id > 0 ? "Edit" : "Add") Copy </h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form method="post" asp-controller="BookCopies" enctype="multipart/form-data" asp>
                    <input type="hidden" asp-for="BookId"  />
                    @if (Model?.Id > 0)
                    {
                        <input type="hidden" asp-for="Id" />
                    }
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" placeholder="Edition Number" asp-for="EditionNumber" />
                            <label asp-for="EditionNumber"></label>
                        </div>
                        <span asp-validation-for="EditionNumber" class="text-danger"></span>
                        @if (Model!.ShowAvailableForRental)
                        {
                            <div class="form-check form-switch mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="IsAvailableForRental">
                                <label class="form-check-label" asp-for="IsAvailableForRental"> </label>
                            </div>
                        }
                       
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2"></i>
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
